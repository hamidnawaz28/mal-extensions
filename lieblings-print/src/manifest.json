{
  "name": "Lister and order processing",
  "description": "Lister and order processing for print24 e-commerce",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["identity", "tabs", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>", "https://i.ebayimg.com/images/*"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://www.ebay.de/sch/*"],
      "js": ["ebay.js"]
    },
    {
      "run_at": "document_end",
      "matches": ["https://www.hamidnawaz.com/*"],
      "js": ["ebay.js"]
    },
    {
      "run_at": "document_end",
      "matches": ["https://seller-eu.temu.com/order-detail.html*"],
      "js": ["temuPlaceOrder.js"]
    },
    {
      "run_at": "document_end",
      "matches": ["https://seller-eu.temu.com/order-detail.html*"],
      "js": ["syncTrackingNumber.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["addTemuProduct.js"],
      "matches": ["https://seller-eu.temu.com/*"]
    },
    {
      "resources": ["placeLieblingsOrder.js"],
      "matches": ["https://lieblingsflair.de/*"]
    },
    {
      "resources": ["syncTemuTrackingNumber.js"],
      "matches": ["https://seller-eu.temu.com/orders.html/*"]
    }
  ]
}
