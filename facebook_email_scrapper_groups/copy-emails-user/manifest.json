{
  "name": "Email Copier",
  "version": "1.0",
  "description": "",
  "manifest_version": 2,
  "incognito": "split",
  "icons": {
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": "icons/128.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "persistent": true,
    "page": "background/background.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*.facebook.com/*",
    "https://script.google.com/*"
  ]
}
